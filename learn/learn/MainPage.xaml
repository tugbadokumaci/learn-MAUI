<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="learn.MainPage"
             xmlns:viewmodel="clr-namespace:learn.ViewModel"

             >

    
    <Grid RowDefinitions="240, Auto, Auto, Auto, *" ColumnDefinitions=".80*, .20*" Padding="12">


        <Image Grid.ColumnSpan="2"  Source="me.png" BackgroundColor="Orange" >
        </Image>

        <Button Text= "QR APP" Grid.ColumnSpan="2"   Command="{Binding TapCommand}">
        </Button>

        <Entry Placeholder="Bir renk giriniz: " PlaceholderColor="Blue" Grid.Row="1" Text= "{Binding Color}" x:Name = "ColorNameEntry"> <!-- mainviewmodel yapılan tüm değişiklikler burada gözükür -->
        </Entry>

        <Button Text= "Renk ekle" Grid.Row="1" Grid.Column="1" Command="{Binding AddColorCommand}">
        </Button>

         <Button Text= "Renk sil" Grid.Row="2" Grid.Column="1" Command="{Binding DeleteColorCommand}" CommandParameter="{Binding Source = {x:Reference ColorNameEntry}, Path=Text}">
        </Button>

        <CollectionView Grid.Row="4" Grid.ColumnSpan="3" ItemsSource="{Binding ColorItems}" SelectionMode="None">



